<Window x:Class="War3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:War3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <Grid>
        <Menu>
            <TextBlock  Width="100" Background="#FF25B646" Padding="10" Foreground="#FF1F41B6">TExtBlock</TextBlock>
            <Label Width="100" Content="label"></Label>
            <TextBox Width="100">TextBox</TextBox>
        </Menu>

        <TextBox x:Name="textbox" Grid.ColumnSpan="2" Margin="10, 100, 100, 100" ></TextBox>
        <Button x:Name="button" Content="Очистить" HorizontalAlignment="Left" Margin="10,70,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" Click="button_Click"/>

    </Grid>
</Window>
