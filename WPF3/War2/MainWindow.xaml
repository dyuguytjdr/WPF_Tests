<Window x:Class="War2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:War2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Menu x:Name="menu" HorizontalAlignment="Stretch" Margin="100,0,0,0" Height="100" VerticalAlignment="Top"  Background="#FFEEE982">
            <Label x:Name="label" Content="Меню 1" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        </Menu>
        <Menu x:Name="menu1" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="100" Background="LightBlue">
            <Label x:Name="label1" Content="Меню 2"/>
        </Menu>
        
        <Menu x:Name="menu3" HorizontalAlignment="Stretch" Margin="100,0,0,0" Height="100" VerticalAlignment="Bottom"  Background="#FF82EE96">
            <Label x:Name="label3" Content="Меню 4" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        </Menu>
        <Menu x:Name="menu2" HorizontalAlignment="Right" VerticalAlignment="Stretch" Width="100" Background="#FF2A83AC">
            <Label x:Name="label2" Content="Меню 3"/>
        </Menu>

    </Grid>
</Window>
