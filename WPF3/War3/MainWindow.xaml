<Window x:Class="War3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:War3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TreeView x:Name="treeView" />
        <TreeViewItem Margin="10" Header="Дни недели" IsSelected="True">
            <TreeViewItem Header="Понедельник" />
            <TreeViewItem Header="Вторник" />
            <TreeViewItem Header="Среда"/>
            <TreeViewItem Header="Четверг"/>
            <TreeViewItem Header="Пятница"/>
            <TreeViewItem Header="Суббота"/>
            <TreeViewItem Header="Воскресенье"/>

        </TreeViewItem>
       
    </Grid>
</Window>
